<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1" id="logout">
        <div class="page-header">
            <h3 class="reviews">Leave your comment</h3>
            <div class="logout">
                               
            </div>
        </div>
        <div class="comment-tabs">
            <ul class="nav nav-tabs" role="tablist">
                <li class="active"><a href="#comments-logout" role="tab" data-toggle="tab"><h4 class="reviews text-capitalize">Comments</h4></a></li>
                <li><a href="#add-comment" role="tab" data-toggle="tab"><h4 class="reviews text-capitalize">Add comment</h4></a></li>
                
            </ul>            
            <div class="tab-content" style="margin-top:20px">
                <div class="tab-pane active" id="comments-logout">                
                    <ul class="media-list">
						<% found.comments.forEach(function(comment){ %>
                      <li class="media">
                        <a class="pull-left" href="#">
                          <img class="media-object img-circle" src="https://images.unsplash.com/photo-1574774191469-3d7732e5fc8b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" alt="profile">
                        </a>
                        <div class="media-body">
                          <div class="well well-lg">
                              <h4 class="media-heading text-uppercase reviews"> <%= comment.author %></h4>
                              <!-- <ul class="media-date text-uppercase reviews list-inline">
                                <li class="dd">22</li>
                                <li class="mm">09</li>
                                <li class="aaaa">2014</li>
                              </ul> -->
                              <p class="media-comment">
                                <%= comment.text %>
                              </p>
                          </div>              
                        </div>
                      </li>  
						<% }); %>
                    </ul> 
                </div>
                <div class="tab-pane" id="add-comment">
                    <form action="/life/<%= found._id %>" method="post" class="form-horizontal" id="commentForm" role="form"> 
                        <div class="form-group">
                            <label for="email" class="col-sm-2 control-label">Comment</label>
							<!-- <div class="col-sm-10">
                              <input class="form-control" type="text" name="comment[author]" placeholder="author(optional)">
                            </div> -->
                            <div class="col-sm-10">
								<input class="form-control" type="text" name="comment[author]" placeholder="author" rows="2">
                              <textarea class="form-control" name="comment[text]" id="addComment" placeholder="comment" rows="5" style="margin-top:10px"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">                    
                                <button class="btn btn-success btn-circle text-uppercase" type="submit" id="submitComment"><span class="glyphicon glyphicon-send"></span> Summit comment</button>
                            </div>
                        </div>            
                    </form>
                </div>
                
